<div class="visible-xs">
	<div class="tagline-bar-xs">
		<div class="container">
			<h2 class="tagline-xs text-center">The Front Page of Coffee</h2>
		</div>
	</div>

	<div class="article-list">

		<% @featured.each do |item| %>
			<div class="<%= cycle('list-odd', 'list-even') %>">
				<div class="container">
					<div class="article-item-xs col-xs-12">
						
							<%= image_tag item.img_url, class: "img-xs" %>
						
						<h1 class="title-xs">
							<%= link_to item.title, item %>
						</h1>
						<p class="summary-xs">
							<%= truncate item.summary, length: 260 %>
						</p>

						<p class="pull-left vote-count-xs">
							<%= item.reputation_for(:votes).to_i %> &bull;&nbsp;
						</p>
						<p class="pull-left tags-xs">
							<%= link_to item.source, '#', class: "tag-link-xs" %> &bull; 
							<%= link_to 'Tag', '#', class: "tag-link-xs" %>
						</p>

						<p class="updown-xs pull-right">
							<%= render 'dummyvote' %>
							
						</p>

					</div>
				</div>
			</div>

		<% end %>

	</div>



</div>




