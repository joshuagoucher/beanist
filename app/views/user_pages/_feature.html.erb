
<div class="list-group col-lg-6">
	<% @feature.each do |item| %>
	<div class="list-group-item col-lg-12 col-md-12 col-sm-12 col-xs-12">
		<div class="row">
			<small class="col-lg-12 editors-comment">
				<%= item.editors_comment %>
			</small>
			
			<img src="<%= item.img_url %>" class="col-lg-7 feature-picture">

			<h1 class="h4 col-lg-5 feature-title">
				<%= link_to item.title, item, target: "_blank" %>
			</h1>
			<p class="col-lg-5 feature-summary">
				<%= truncate(item.summary, length: 160) %>
			</p>
			<small class="text-muted feature-pubdate col-lg-5 text-right">
				<%= item.source %> / <%= item.pubdate %>
			</small>

			<div class="voter col-lg-5">
				

			<!--  -->

				<p class="updown pull-right">
					<%= item.reputation_for(:votes).to_i %>
					<%=link_to vote_featured_article_path(item, type: "up"), method: "post" do %>
						<span class="glyphicon glyphicon-circle-arrow-up"></span>
					<% end %>
					 
					<%=link_to vote_featured_article_path(item, type: "down"), method: "post" do %>
						<span class="glyphicon glyphicon-circle-arrow-down"></span>
					<% end %>
				</p>

				

				<% if signed_in? && current_user.admin? %>
					<%= link_to "delete", item, method: :delete,
                                  data: { confirm: "You sure?" } %>
				<% end %>

			</div>
		</div>
	</div>
	<% end %>
</div>