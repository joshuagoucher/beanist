
<% if signed_in? %>
	<% if current_user.admin? %>
		<strong>Admin User!</strong>
	<% end %>
	<small class="welcome">Welcome, <%= current_user.name %></small>
	<small class="signout">
		&#40;<%= link_to "Sign out", signout_path, method: :delete %>&#41;
	</small>
<% else %>
	<small class="signin">
		<%= link_to "Sign in", signin_path %>
	</small>
<% end %>
