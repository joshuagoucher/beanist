<!DOCTYPE html>
<html>
<head>
  <title>Beanist | <%= yield(:title) %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Droid+Sans|Passion+One:400,700' rel='stylesheet' type='text/css'>

  <meta name="viewport" content="width=device-width, intial-scale=1.0">
  <script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-47686538-1', 'beanist.co');
  ga('send', 'pageview');

</script>
</head>
<body>

	<div class="top-header hidden-xs">
    <div class="container">
      <div class="col-lg-12">
        <h1 class="beanisty pull-left"><%= link_to 'Beanist', root_url %></h1>
        <% if signed_in? %>
        <p class="pull-right signin">
          Hello, <%= current_user.name %> &bull; 
          <%= link_to 'Sign out', signout_path, method: :delete %>
        </p>
        <% else %>
        <p class="pull-right signin"><%= link_to 'Sign in', signin_path %> &bull; 
          <%= link_to 'Register', signup_path %>
        <% end %>
        </p>
      </div>
    </div> 
  </div>
  <div class="tag-nav hidden-xs">
  <div class="container">
    <p class="tag-nav-links col-lg-12 col-md-12 col-sm-12">
      <a href="/tags/news">News</a> &bull;
      <a href="/tags/brew-guides">Brew Guides</a> &bull;
      <a href="/tags/reviews">Reviews</a>
    </p>
  </div>
</div>

  
     






  <div class="top-header-xs visible-xs">
    <div class="container">
      <div class="row">
      <% if signed_in? %>
        <p class="pull-right signin-xs">
          Hello, <%= current_user.name %> &bull; 
          <%= link_to 'Sign out', signout_path, method: :delete %>
        </p>
        <% else %>
        <p class="pull-right signin-xs"><%= link_to 'Sign in', signin_path %> &bull; 
          <%= link_to 'Register', signup_path %>
        <% end %>
      </div>
      <h1 class="beanist-xs text-center"><%= link_to 'Beanist', root_url %></h1>
    </div>
  </div>
  

<%= yield %>


<div class="container footer-border">
  <p class="text-muted text-center footer"><%= link_to 'What is Beanist?', about_path %></p>
</div>

<% if signed_in? && current_user.admin? %>
  <div class="container">
    <div class="well col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <p><%= link_to "New Article", new_featured_article_path, target: "_blank" %></p>
      <p>
        <a href="http://pipes.yahoo.com/pipes/pipe.info?_id=e8dd4d7d8b5d4a4788d1191f82e93d06" target="_blank">
        Article sources
        </a>
      </p>
      <p><%= link_to "All users", users_path %></p>
      <p><%= link_to "Posts", posts_path %></p>
      <p>Todays favourites</p>
      <ol>
      <% @daily_favs.each do |item| %>
        <li><%= link_to item.title, item %> &bull; <%= item.reputation_for(:votes).to_i %> </li>
      <% end %>
      </ol>

      <p>Last Week's Favourites</p>
      <ol>
      <% @week_favs.each do |item| %>
        <li><%= link_to item.title, item %> &bull; <%= item.reputation_for(:votes).to_i %> </li>
      <% end %>
      </ol>
      <p>Last week's email subscribers</p>
      <ul>
        <% @recent_users.each do |user| %>
        <li><%= user.name %> &bull; <%= user.email %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>


</body>


</html>
