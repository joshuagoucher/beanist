<div class="container">

<h1>New Featured article</h1>
<%= form_for(@article) do |f| %>
	<%= f.label :img_url %>
	<%= f.text_field :img_url %>

	<%= f.label :editors_comment %>
	<%= f.text_field :editors_comment %>

	<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.label :summary %>
	<%= f.text_area :summary, rows: 3 %>

	<%= f.label :url %>
	<%= f.text_field :url %>

	<%= f.label :pubdate, "Published date" %>
	<%= f.text_field :pubdate %>

	<%= f.label :source %>
	<%= f.text_field :source %>

	<%= f.submit "Add Article" %>

<% end %>

</div>