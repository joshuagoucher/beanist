<% provide(:title, 'Sign In') %>
<div class="container flash visible-xs">
    <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
<div class="container">

<div class="col-lg-4 col-md-4 col-sm-5 col-xs-12">
<h1 class="signupform">Sign in</h1><br />
<%= form_for(:session, url: sessions_path) do |f| %>

	<div class="form-group">
		<%= f.text_field :email, placeholder: "Email", class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.password_field :password, placeholder: "Password", class: "form-control" %>
	</div>
	<%= f.submit "Sign in", class: "btn btn-primary" %>
<% end %>
</div>
<div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-3 col-xs-12">
	<h1 class="text-right">New user? <br /><%= link_to "Sign up now!", signup_path %></h1>
</div>

</div>