
<% provide(:title, @post.title.upcase) %>

<div class="container">
	<div class="col-lg-12">
		<h1 class="text-center post-title"><%= @post.title %></h1>

	</div>


	<div class="col-lg-8 col-lg-offset-2">

		<p class="post-body"><%= sanitize(@post.body) %></p>
		<small class="text-muted">
			By: <%= link_to @post.author.upcase, tag_path(@post.author.downcase) %>
		</small>

	</div>

</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
