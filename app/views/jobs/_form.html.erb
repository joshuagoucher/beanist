
<div class="container">

  <%= form_for(@job) do |f| %>
    <% if @job.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>

        <ul>
        <% @job.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :location %><br />
      <%= f.text_field :location %>
    </div>
    <div class="field">
      <%= f.label :job_type %><br />
      <%= f.select :job_type, options_for_select([["Full Time", "Full Time"], ["Part Time", "Part Time"], ["Freelance", "Freelance"], ["Temp/Seasonal", "Temp/Seasonal"], ["Intern", "Intern"]]) %>
    </div>
    <div class="field">
      <%= f.label :company %><br />
      <%= f.text_field :company %>
    </div>
    <div class="field">
      <%= f.label :category %><br />
      <%= f.select :category, options_for_select([["Barista", "Barista"], ["Supervisor", "Supervisor"], ["Trainer", "Trainer"], ["Roaster", "Roaster"], ["Sales", "Sales"], ["Logistics", "Logistics"], ["Food", "Food"] , ["Other", "Other"]]) %>
    </div>
    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </div>
          <% if signed_in? && current_user.admin? %>
              <div class="checkbox">
              <%= f.check_box :verified %><%= f.label "verify?" %>
              </div>
              <div class="field">
                <%= f.label :tag_list %><br />
                <%= f.text_field :tag_list %>
              </div>
      <% end %>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

</div>
